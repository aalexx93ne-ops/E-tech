# Django core
# ВАЖНО: Сгенерируйте уникальный ключ командой: python generate_secret_key.py
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (default: SQLite)
# DATABASE_URL=postgres://user:password@localhost:5432/etech

# Media / Static
MEDIA_URL=/media/

# Email
# Для разработки используется console backend (вывод в терминал)
# Для продакшена — укажите SMTP данные
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Payment callback secret key
# Секретный ключ для проверки подписи callback от платёжной системы
PAYMENT_CALLBACK_SECRET=your-payment-secret-here

# NowPayments payment gateway (приоритет)
# https://nowpayments.io/
NOWPAYMENTS_API_KEY=your-api-key-here
# IPN Secret — генерируется в Dashboard → Payment Settings → IPN Secret Key
NOWPAYMENTS_IPN_SECRET=your-ipn-secret-here
# Публичный URL сайта (используется для callback/success/cancel URL)
SITE_URL=https://yourdomain.com

# CryptoCloud payment gateway (резервный)
# https://cryptocloud.pro/
CRYPTOCLOUD_API_KEY=your-api-key-here
CRYPTOCLOUD_SECRET_KEY=your-secret-key-here
CRYPTOCLOUD_SHOP_ID=your-shop-id-here

# Google OAuth (django-allauth)
# ПОЛУЧЕНИЕ КЛЮЧЕЙ: https://console.cloud.google.com/apis/credentials
# 1. Создайте проект в Google Cloud Console
# 2. Создайте OAuth 2.0 Client ID
# 3. Добавьте authorized redirect URI: http://localhost:8000/accounts/google/login/callback/
# 4. Скопируйте Client ID и Client Secret ниже
GOOGLE_CLIENT_ID=your-client-id-here
GOOGLE_CLIENT_SECRET=your-client-secret-here
